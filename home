 <!-- JavaScript for Font Toggle --> <script>
function changeFont(font) {
if (font === 'opendyslexia') {
document.body.style.fontFamily = 'OpenDyslexic, Arial, sans-serif'; } else {
document.body.style.fontFamily = 'Arial, sans-serif'; }
} </script>
